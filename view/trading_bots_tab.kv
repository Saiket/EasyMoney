#:kivy 1.9
# Defines templates related to the view.trading_bots_tab module.

# Base style of all table cells.
<TableCell@Label>:
    shorten: True
    shorten_from: 'right'
    text_size: self.size

    padding: cm(0.05), cm(0.05)


# Style of table header cells.
<HeaderCell@TableCell>:
    bold: True
    halign: 'center'
    valign: 'bottom'


# Style of table body cells.
<BodyCell@TableCell>:
    halign: 'left'
    valign: 'center'
    padding: cm(0.4), cm(0.05)

    # Improve readability when row is selected
    outline_width: '2pt'
    outline_color: 0.35, 0.35, 0.35  # Same gray as button


# Style of dollar-value table body cells.
<BodyCellDollars@BodyCell>:
    halign: 'right'
    font_name: 'Roboto'


# Vertical bar dividing cell columns.
<CellDivider@Widget>:
    pos_hint: {'y': 0.1}
    size_hint: None, 0.8
    width: '1pt'

    canvas:
        Color:
            rgba: 1, 1, 1, 0.5  # Translucent white
        Rectangle:
            size: self.size
            pos: self.pos


# Base styles of table column cells.
<ColumnTraderName@Widget>:
    size_hint_x: 0.3
<ColumnTradingAlgorithm@Widget>:
    size_hint_x: 0.3
<ColumnInitialFunds@Widget>:
    size_hint_x: 0.2
<ColumnTradingFee@Widget>:
    size_hint_x: 0.2


# Table header cells.
<HeaderCellTraderName@HeaderCell+ColumnTraderName>:
    text: 'Trader Name'
<HeaderCellTradingAlgorithm@HeaderCell+ColumnTradingAlgorithm>:
    text: 'Trading Algorithm'
<HeaderCellInitialFunds@HeaderCell+ColumnInitialFunds>:
    text: 'Initial Funds'
<HeaderCellTradingFee@HeaderCell+ColumnTradingFee>:
    text: 'Trading Fee'


# Table body cells.
<BodyCellTraderName@BodyCell+ColumnTraderName>:
<BodyCellTradingAlgorithm@BodyCell+ColumnTradingAlgorithm>:
<BodyCellInitialFunds@BodyCellDollars+ColumnInitialFunds>:
<BodyCellTradingFee@BodyCellDollars+ColumnTradingFee>:


# Selectable table body row representing a trading bot.
<TradingBotRow>:
    size_hint_y: None
    height: cm(1)

    ToggleButton:
        group: 'TradingBots'

        pos_hint: {'x': 0, 'y': 0}

        on_state: root.tab.selected_trader = root if self.state == 'down' else None

    BoxLayout:
        orientation: 'horizontal'

        spacing: cm(0.1)
        pos_hint: {'x': 0, 'y': 0}

        BodyCellTraderName:
            text: repr(root.trader_name)
        CellDivider:
        BodyCellTradingAlgorithm:
            text: root.trading_algorithm
        CellDivider:
        BodyCellInitialFunds:
            text: '${:,.2f}'.format(root.initial_funds)
        CellDivider:
        BodyCellTradingFee:
            text: '${:,.2f}'.format(root.trading_fee)


# Button along bottom bar for controlling selected traders.
<BottomButton@Button>:
    size_hint_x: None
    width: cm(3)


<TradingBotsTab>:
    text: 'Trading Bots'
    id: tab

    button_add: button_add.__self__
    button_edit: button_edit.__self__
    button_remove: button_remove.__self__

    table_rows: table_rows.__self__


    # Tab contents
    BoxLayout:
        orientation: 'vertical'

        padding: 0, cm(0.4), 0, 0  # Only top padding

        # Black background
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos


        # Trading bot list table
        BoxLayout:
            orientation: 'vertical'

            padding: cm(0.4), 0  # Left and right padding
            spacing: cm(0.2)

            # Table header
            BoxLayout:
                orientation: 'horizontal'
                spacing: cm(0.1)
                size_hint_y: None
                height: cm(1)

                # Gray background
                canvas:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                HeaderCellTraderName:
                CellDivider:
                HeaderCellTradingAlgorithm:
                CellDivider:
                HeaderCellInitialFunds:
                CellDivider:
                HeaderCellTradingFee:

            # Table body
            ScrollView:
                do_scroll_x: False

                # Row container
                BoxLayout:
                    id: table_rows
                    orientation: 'vertical'

                    spacing: cm(0.2)
                    size_hint_y: None
                    height: self.minimum_height



        # Bottom buttons
        BoxLayout:
            orientation: 'horizontal'

            size_hint_y: None
            height: cm(1.5)

            # Gray background
            canvas:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            BottomButton:
                id: button_add
                text: 'Add'

                on_release: root.on_button_add_clicked()

            BottomButton:
                id: button_edit
                text: 'Edit'
                disabled: True

                on_release: root.on_button_edit_clicked()

            BottomButton:
                id: button_remove
                text: 'Remove'
                disabled: True

                on_release: root.on_button_remove_clicked()

            # Spacer
            Widget:
