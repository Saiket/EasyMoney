#:kivy 1.9
# Defines templates related to the view.trading_bots_tab module.

<TradingBotRow@ToggleButton>:
    # List entry
    group: 'TradingBots'

    size_hint: 1, None
    height: 100

    on_state: self.tab.selected_trader = self.text if self.state == 'down' else None


<TradingBotsTab>:
    text: 'Trading Bots'
    id: tab

    button_add: button_add.__self__
    button_edit: button_edit.__self__
    button_remove: button_remove.__self__

    selected_trader: None

    BoxLayout:
        orientation: 'vertical'


        # Trading bot list
        ScrollView:
            do_scroll_x: False,
            bar_width: 20

            size_hint: 1, 1

            BoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 10

                size_hint: 1, None
                # When adding children, resize container to fit contents.
                on_minimum_height: self.height = self.minimum_height

                TradingBotRow:
                    text: '1'
                    tab: root
                TradingBotRow:
                    text: '2'
                    tab: root
                TradingBotRow:
                    text: '3'
                    tab: root
                TradingBotRow:
                    text: '4'
                    tab: root
                TradingBotRow:
                    text: '5'
                    tab: root
                TradingBotRow:
                    text: '6'
                    tab: root
                TradingBotRow:
                    text: '7'
                    tab: root
                TradingBotRow:
                    text: '8'
                    tab: root
                TradingBotRow:
                    text: '9'
                    tab: root



        # Bottom buttons
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: 75

            Button:
                id: button_add
                text: 'Add'

                size_hint: None, 1
                width: 150

                on_release: root.on_button_add_clicked()

            Button:
                id: button_edit
                text: 'Edit'

                size_hint: None, 1
                width: 150

                on_release: root.on_button_edit_clicked()

            Button:
                id: button_remove
                text: 'Remove'

                size_hint: None, 1
                width: 150

                on_release: root.on_button_remove_clicked()

            # Spacer
            Widget:
                size_hint: 1, 1
