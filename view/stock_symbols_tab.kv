#:kivy 1.9
# Defines templates related to the view.symbols_tab module.

<FilePopup@popup>:
    title: 'Add Symbol'
    auto_dismiss: False

    size_hint: .5, .5

    BoxLayout:
        orientation: 'vertical'

        FileChooser:
            id: filechooser	
            orientation: 'vertical'
            FileChooserListLayout

        BoxLayout:
            orientation: 'horizontal'

            size_hint_y: None
            height: cm(1.0)

            Button:
                text: 'Open'
                on_release: root._open(str(filechooser.selection[0]))
            Button:
                text: 'Cancel'
                on_press: root.dismiss()




# Base style of all table cells.
<TableCell@Label>:
    shorten: True
    shorten_from: 'right'
    text_size: self.size

    padding: mm(0.5), mm(0.5)


# Style of table header cells.
<HeaderCell@TableCell>:
    bold: True
    halign: 'center'
    valign: 'bottom'


# Style of table body cells.
<BodyCell@TableCell>:
    halign: 'left'
    valign: 'center'
    padding: mm(4), mm(0.5)

    # Improve readability when row is selected
    outline_width: sp(2)
    outline_color: 0.35, 0.35, 0.35  # Same gray as button


# Style of dollar-value table body cells.
<BodyCellDollars@BodyCell>:
    halign: 'right'
    font_name: 'RobotoMono-Regular'


# Vertical bar dividing cell columns.
<CellDivider@Widget>:
    pos_hint: {'y': 0.1}
    size_hint: None, 0.8
    width: sp(1)

    canvas:
        Color:
            rgba: 1, 1, 1, 0.5  # Translucent white
        Rectangle:
            size: self.size
            pos: self.pos


# Base styles of table column cells.
<ColumnExchangeName@Widget>:
    size_hint_x: 0.3
<ColumnSymbol@Widget>:
    size_hint_x: 0.3


# Table header cells.
<HeaderCellExchangeName@HeaderCell+ColumnExchangeName>:
    text: 'Exchange'
<HeaderCellSymbol@HeaderCell+ColumnSymbol>:
    text: 'Symbol'

# Table body cells.
<BodyCellExchangeName@BodyCell+ColumnExchangeName>:
<BodyCellSymbol@BodyCell+ColumnSymbol>:



# Selectable table body row representing a symbol.
<SymbolRow>:
    size_hint_y: None
    height: cm(1)

    ToggleButton:
        group: 'Symbols'

        pos_hint: {'x': 0, 'y': 0}

        on_state: root.tab.selected_symbol_row = root if self.state == 'down' else None

    BoxLayout:
        orientation: 'horizontal'

        spacing: mm(1)
        pos_hint: {'x': 0, 'y': 0}

        BodyCellExchangeName:
            text: 'NYSE'
        CellDivider:
        BodyCellSymbol:
            text: root.symbol_name
        CellDivider:




# Button along bottom bar for controlling selected symbols.
<BottomButton@Button>:
    size_hint_x: None
    width: cm(3)




<StockSymbolsTab>:
    text: 'Symbols'
    id: tab

    table_rows: table_rows.__self__


    # Tab contents
    BoxLayout:
        orientation: 'vertical'

        padding: 0, mm(4), 0, 0  # Only top padding

        # Black background
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos


        # symbol list table
        BoxLayout:
            orientation: 'vertical'

            padding: mm(4), 0  # Left and right padding
            spacing: mm(2)

            # Table header
            BoxLayout:
                orientation: 'horizontal'
                spacing: mm(1)
                size_hint_y: None
                height: cm(1)

                # Gray background
                canvas:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                HeaderCellExchangeName:
                CellDivider:
                HeaderCellSymbol:
                CellDivider:

            # Table body
            ScrollView:
                do_scroll_x: False

                # Row container
                BoxLayout:
                    id: table_rows
                    orientation: 'vertical'

                    spacing: mm(2)
                    size_hint_y: None
                    height: self.minimum_height



        # Bottom buttons
        BoxLayout:
            orientation: 'horizontal'

            size_hint_y: None
            height: cm(1.5)

            # Gray background
            canvas:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            BottomButton:
                text: 'Add'

                on_release: root.on_add_clicked()

            BottomButton:
                text: 'Remove'
                disabled: root.selected_symbol_row is None

                on_release: root.on_remove_clicked()

            # Spacer
            Widget: