#:kivy 1.9
# Defines templates related to the view.symbols_tab module.

<AddSymbolFilePopup>:
    title: 'Add AlphaVantage Stock Symbol (*.json)'
    auto_dismiss: False

    filechooser: filechooser.__self__

    size_hint: 0.75, 0.75

    BoxLayout:
        orientation: 'vertical'

        FileChooserListView:
            id: filechooser
            filters: ['*.json']

        BoxLayout:
            orientation: 'horizontal'

            size_hint_y: None
            height: cm(1.0)

            Button:
                text: 'Open'
                disabled: not filechooser.selection
                on_release: root.open_file(filechooser.path, filechooser.selection[0])

            Button:
                text: 'Cancel'
                on_press: root.dismiss()




# Table parts

# Base styles of table column cells.
<ColumnExchangeName@Widget>:
    size_hint_x: 0.3
<ColumnSymbol@Widget>:
    size_hint_x: 0.3


# Table header cells.
<HeaderCellExchangeName@HeaderCell+ColumnExchangeName>:
    text: 'Stock Exchange'
<HeaderCellSymbol@HeaderCell+ColumnSymbol>:
    text: 'Stock Symbol'

# Table body cells.
<BodyCellExchangeName@BodyCell+ColumnExchangeName>:
<BodyCellSymbol@BodyCell+ColumnSymbol>:




# Selectable table body row representing a symbol.
<SymbolRow>:
    size_hint_y: None
    height: cm(1)

    ToggleButton:
        group: 'Symbols'

        pos_hint: {'x': 0, 'y': 0}

        on_state: root.tab.selected_symbol_row = root if self.state == 'down' else None

    BoxLayout:
        orientation: 'horizontal'

        spacing: mm(1)
        pos_hint: {'x': 0, 'y': 0}

        BodyCellExchangeName:
            text: root.exchange_name or 'Unknown'
            color: [1, 1, 1, 1] if root.exchange_name else [1, 1, 1, 0.75]
            halign: 'center'

        CellDivider:
        BodyCellSymbol:
            text: root.symbol_name
            halign: 'center'




<StockSymbolsTab>:
    text: 'Symbols'
    id: tab

    table_rows: table_rows.__self__


    # Tab contents
    BoxLayout:
        orientation: 'vertical'

        padding: 0, mm(4), 0, 0  # Only top padding

        # Black background
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos


        # symbol list table
        BoxLayout:
            orientation: 'vertical'

            padding: mm(4), 0  # Left and right padding
            spacing: mm(2)

            # Table header
            BoxLayout:
                orientation: 'horizontal'
                spacing: mm(1)
                size_hint_y: None
                height: cm(1)

                # Gray background
                canvas:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                HeaderCellExchangeName:
                CellDivider:

                HeaderCellSymbol:

            # Table body
            ScrollView:
                do_scroll_x: False

                # Row container
                BoxLayout:
                    id: table_rows
                    orientation: 'vertical'

                    spacing: mm(2)
                    size_hint_y: None
                    height: self.minimum_height



        # Bottom buttons
        BottomButtonBar:
            BottomButton:
                text: 'Add'
                on_release: root.on_add_clicked()

            BottomButton:
                text: 'Remove'
                disabled: root.selected_symbol_row is None
                on_release: root.on_remove_clicked()

            # Spacer
            Widget:
